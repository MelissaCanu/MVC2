@model U2S2E3.Models.Prodotto

<div class="card shadow w-50">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="@Model.ImgCopertina" alt="First slide" style="max-height: 400px; object-fit: contain;">
            </div>
            @if (!string.IsNullOrEmpty(Model.ImgAggiuntiva1))
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.ImgAggiuntiva1" alt="Second slide" style="max-height: 400px; object-fit: contain;">
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.ImgAggiuntiva2))
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.ImgAggiuntiva2" alt="Third slide" style="max-height: 400px; object-fit: contain;">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon text-bg-dark" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon text-bg-dark" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="card-body bg-dark text-white">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="card-text">@Model.Descrizione</p>
        <p class="card-text">Prezzo: @Model.Prezzo</p>
    </div>
</div>
