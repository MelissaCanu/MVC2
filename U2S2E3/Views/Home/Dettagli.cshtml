@model U2S2E3.Models.Prodotto

@{
    ViewBag.Title = "Dettagli";
}
<h2>Dettagli per @Model.Nome </h2>

<div class="card" style="max-width: 540px;">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="@Model.ImgCopertina" alt="First slide">
            </div>

            <!--if per verificare se le immagini aggiuntive sono presenti-->
             
            @if (!string.IsNullOrEmpty(Model.ImgAggiuntiva1))
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.ImgAggiuntiva1" alt="Second slide">
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.ImgAggiuntiva2))
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.ImgAggiuntiva2" alt="Third slide">
                </div>
            }
        </div>
<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only"><i class="fas fa-chevron-left text-dark"></i></span>
</a>
<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only"><i class="fas fa-chevron-right text-dark"></i></span>
</a>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="card-text">@Model.Descrizione</p>
        <p class="card-text">Prezzo: @Model.Prezzo</p>
    </div>
</div>
